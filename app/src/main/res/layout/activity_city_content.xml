<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/bt_test_top_places_to_see"
        android:layout_width="189dp"
        android:layout_height="93dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/sightseeing_group"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/button_sightseeing_places"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_test_top_places_to_eat" />

    <Button
        android:id="@+id/bt_test_top_places_to_eat"
        android:layout_width="190dp"
        android:layout_height="83dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/food_group"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/button_more_food_placeses"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_test_top_scoring_tags" />

    <Button
        android:id="@+id/bt_test_top_scoring_tags"
        android:layout_width="190dp"
        android:layout_height="82dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tour_group"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/button_more_tours"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_best_places" />

    <TextView
        android:id="@+id/tv_city_main_snippet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:fontFamily="serif"
        android:textSize="@dimen/text_size_16"
        android:transitionName="@string/snippet_transition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_city_main_name" />

    <TextView
        android:id="@+id/tv_city_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/text_size_32"
        android:transitionName="@string/name_transition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_best_places"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:fontFamily="serif"
        android:text="@string/best_places"
        android:textSize="@dimen/text_size_21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_city_main_snippet" />

</android.support.constraint.ConstraintLayout>